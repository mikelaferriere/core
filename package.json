{
  "name": "@mikelaferriere/homelab-core",
  "version": "2.0.3",
  "description": "Shared module containing logging, metrics and other modules",
  "keywords": [],
  "author": "Mike Laferriere",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikelaferriere/homelab-core"
  },
  "main": "build/index.js",
  "types": "./build/models",
  "files": [
    "./build",
    "./build/models"
  ],
  "scripts": {
    "build": "tsc",
    "deploy": "tsc",
    "format:check": "prettier . --check",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "postdeploy": "rm -rf node_modules",
    "prebuild": "rm -rf build",
    "precommit": "npm run format:check && npm run lint && npm run build && npm run test",
    "prepare:init": "husky install",
    "publish:local": "git tag v$npm_package_version && git push --tags && gh release create v$npm_package_version --generate-notes",
    "test": "jest . --coverage"
  },
  "browser": {
    "@opentelemetry*": false,
    "winston*": false
  },
  "publishConfig": {
    "@mikelaferriere:registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@opentelemetry/api": "1.4.1",
    "@opentelemetry/exporter-jaeger": "1.14.0",
    "@opentelemetry/instrumentation": "0.40.0",
    "@opentelemetry/instrumentation-http": "0.40.0",
    "@opentelemetry/instrumentation-koa": "0.34.6",
    "@opentelemetry/instrumentation-winston": "0.31.4",
    "@opentelemetry/sdk-trace-base": "1.14.0",
    "@opentelemetry/sdk-trace-node": "1.14.0",
    "async-mqtt": "2.6.3",
    "axios": "1.6.0",
    "luxon": "3.4.3",
    "winston": "3.11.0",
    "winston-loki": "6.0.8"
  },
  "devDependencies": {
    "@types/jest": "29.5.7",
    "@types/luxon": "3.3.3",
    "@types/node": "18.6.0",
    "@types/pg": "8.6.5",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/parser": "6.9.1",
    "eslint": "8.52.0",
    "husky-init": "8.0.0",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.2.2"
  }
}
